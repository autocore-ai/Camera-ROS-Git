<launch>
	<!-- declare arguments with default values -->
	<arg name="proto_file" default="$(find traffic_detect)/models/MobileNetSSD_deploy.prototxt"/>
	<arg name="model_file" default="$(find traffic_detect)/models/MobileNetSSD_deploy.caffemodel"/>
	<arg name="model_name" default="mssd_300"/>
	<arg name="roi_region" default="550,250,300,300"/>
        <arg name ="refresh_epoch" default = "10"/>
    	<arg name="image_source_topic" default="/usb_cam/image_raw"/>
    	<arg name="status_code_topic" default="/traffic/tls_code"/>
	<arg name ="image_pub_topic" default="/traffic/image_raw"/>

	<node pkg="traffic_detect" type="traffic_detect" name="traffic_detect" output="screen">
	<param name="proto_file" value="$(arg proto_file)"/>
	<param name="model_file" value="$(arg model_file)"/>
	<param name="model_name" value="$(arg model_name)"/>
	<param name ="roi_region" value="$(arg roi_region)"/>
        <param name ="refresh_epoch" value ="$(arg refresh_epoch)"/>
        <param name="image_source_topic" value="$(arg image_source_topic)"/>
	<param name ="status_code_topic" value="$(arg status_code_topic)"/>
        <param name="image_pub_topic" value="$(arg image_pub_topic)"/>
	</node>
</launch>
