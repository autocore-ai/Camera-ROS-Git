<launch>
	<!-- declare arguments with default values -->
    <arg name="image_source_topic" default="/usb_cam/image_raw"/>
    <arg name="status_code_topic" default="/traffic/tls_code"/>
	<arg name ="image_raw_topic" default="/traffic/image_raw"/>
    <arg name="traffic_status_topic" default="/traffic/status"/>
    <arg name="traffic_active_topic" default="/traffic/active"/>

	<node pkg="traffic_detect" type="traffic_detect" name="traffic_detect" args="$(find traffic_detect)/model/yolov3.cfg" output="screen">   
    <param name="image_source_topic" value="$(arg image_source_topic)"/>
	<param name ="status_code_topic" value="$(arg status_code_topic)"/>
    <param name="image_raw_topic" value="$(arg image_raw_topic)"/>
    <param name="traffic_status_topic" value="$(arg traffic_status_topic)"/>
    <param name="traffic_active_topic" value="$(arg traffic_active_topic)"/>
	</node>
</launch>
